{
  "name": "elv-form",
  "description": "Yet another form solution for Vue.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "evillt/elv-form"
  },
  "author": "evillt <ijoec123@gmail.com> (https://evila.me)",
  "main": "index.js",
  "types": "types/index.d.ts",
  "files": [
    "index.js"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "lint": "xo",
    "build": "bili -d .",
    "example": "dvan --config example/dvan.config.js --dev"
  },
  "dependencies": {},
  "devDependencies": {
    "@vue/babel-plugin-transform-vue-jsx": "^1.0.0-beta.2",
    "babel-eslint": "^10.0.1",
    "bili": "^4.4.0",
    "dvan": "^2.3.19",
    "element-ui": "^2.6.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "prettier": "^1.15.2",
    "vue": "^2.6.8",
    "vue-template-compiler": "^2.6.8",
    "xo": "^0.23.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unicorn/filename-case": false,
      "no-unused-vars": 1,
      "new-cap": 1
    },
    "ignores": [
      "example/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "example/**"
    ]
  }
}
